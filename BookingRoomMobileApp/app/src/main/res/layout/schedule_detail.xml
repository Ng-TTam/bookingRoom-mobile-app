<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/round_conner"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_margin="12dp"
            android:background="@drawable/round_conner"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/img_hotel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel_img" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/name_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Name hotel"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/btn_change"
                    android:layout_width="95dp"
                    android:layout_height="35dp"
                    android:src="@drawable/button_change"
                    android:scaleType="fitCenter"
                    android:background="@color/white"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/marks"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#787878"
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/schedule_icons"/>

                <TextView
                    android:id="@+id/check_in_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date time"
                    android:textColor="#787878"
                    android:textSize="14dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>